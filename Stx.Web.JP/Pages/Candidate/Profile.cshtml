@page
@model ProfileModel


<section class="min-sec">
    <div class="container">
        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="row">
            <partial name="_LeftMenuProfile" for="PageKey" />

            @if (Model.PageStatus.IsDisplyErrorBanner)
            {
                <div class="col-md-9">
                    <partial name="_StatusBanner" for="PageStatus" />
                </div>
            }
            else
            {
                <div class="col-md-9">

                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title" id="repeat-form">Profile</h4>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">

                                <form class="resume-edit-panel row mb-3" asp-page-handler="UploadResume" asp-page="Profile" method="post" enctype="multipart/form-data">
                                    <div class="col-md-12">
                                        <div class="d-flex align-items-center">
                                            <input type="hidden" asp-for="BaseEntry.CandidateID" />

                                            <div class="dashboard-thumb mb-3">
                                                <div class="dashboard-th-pic mt-1">
                                                    <img src="@Model.BaseEntry.DynmcImageUrl" class="img-fluid mx-auto img-circle" alt="">
                                                </div>
                                                <h6 class="mb-1 text-muted">@Model.BaseEntry.FirstName @Model.BaseEntry.LastName</h6>
                                                <label class="upload-file btn btn-link text-success border-0">
                                                    <input class="form-control" asp-for="@Model.FormFile1" type="file" id="formFile">
                                                </label>
                                            </div>                                            
                                            <div class="dashboard-thumb ms-3">
                                                <label class="upload-file btn btn-link text-success border-0">
                                                    <input class="form-control" asp-for="@Model.FormFile1" type="file" id="formFile">
                                                    <i class="bi-upload me-1"></i> <span class="dsmall fw-bold">Change Image</span>
                                                </label>
                                                <div class="d-flex justify-content-center my-2 gap-1">
                                                    <input class="btn btn-sm btn-outline-info"  style="min-width:100px" type="submit" value="Save" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </form>

                                <form class="resume-edit-panel row g-3" method="post">
                                    <input type="hidden" asp-for="BaseEntry.CandidateID" />

                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.FirstName" class="form-label"></label>
                                        <input asp-for="BaseEntry.FirstName" class="form-control" required>
                                        <span asp-validation-for="BaseEntry.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.LastName" class="form-label"></label>
                                        <input asp-for="BaseEntry.LastName" class="form-control" required>
                                        <span asp-validation-for="BaseEntry.LastName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.NickName" class="form-label"></label>
                                        <input asp-for="BaseEntry.NickName" class="form-control">
                                        <span asp-validation-for="BaseEntry.NickName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.NamePrefix" class="form-label"></label>
                                        <select asp-for="BaseEntry.NamePrefix" class="form-select">
                                            <option value="Mr">Mr</option>
                                            <option value="Mrs">Mrs</option>
                                            <option value="Ms">Ms</option>
                                        </select>
                                        <span asp-validation-for="BaseEntry.NamePrefix" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Gender" class="form-label"></label>
                                        <select asp-for="BaseEntry.Gender" class="form-select">
                                            <option value="M">Male</option>
                                            <option value="F">Female</option>
                                        </select>
                                        <span asp-validation-for="BaseEntry.Gender" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.MaritalStatus" class="form-label"></label>
                                        <select asp-for="BaseEntry.MaritalStatus" class="form-select">
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                        </select>
                                        <span asp-validation-for="BaseEntry.MaritalStatus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="form-label text-muted bold fs-6 mb-0 mt-1">Contact Information</label>
                                    </div>
                                    <div class="col-md-12">
                                        <label asp-for="BaseEntry.Address" class="form-label"></label>
                                        <input asp-for="BaseEntry.Address" class="form-control">
                                        <span asp-validation-for="BaseEntry.Address" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.PostalCode" class="form-label"></label>
                                        <input asp-for="BaseEntry.PostalCode" class="form-control">
                                        <span asp-validation-for="BaseEntry.PostalCode" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.CountryName" class="form-label">Country</label>
                                        <input asp-for="BaseEntry.CountryName" class="form-control">
                                        <span asp-validation-for="BaseEntry.CountryName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Mobile" class="form-label"></label>
                                        <input asp-for="BaseEntry.Mobile" class="form-control" required>
                                        <span asp-validation-for="BaseEntry.Mobile" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Phone" class="form-label"></label>
                                        <input asp-for="BaseEntry.Phone" class="form-control">
                                        <span asp-validation-for="BaseEntry.Phone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Email" class="form-label"></label>
                                        <input asp-for="BaseEntry.Email" class="form-control" required>
                                        <span asp-validation-for="BaseEntry.Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Email2" class="form-label"></label>
                                        <input asp-for="BaseEntry.Email2" class="form-control">
                                        <span asp-validation-for="BaseEntry.Email2" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="form-label text-muted font-bold fs-6 mb-0 mt-1">Other Information</label>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.DateAvailable" class="form-label"></label>
                                        <input asp-for="BaseEntry.DateAvailable" class="form-control" type="date">
                                        <span asp-validation-for="BaseEntry.DateAvailable" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.DateOfBirth" class="form-label"></label>
                                        <input asp-for="BaseEntry.DateOfBirth" class="form-control" type="date">
                                        <span asp-validation-for="BaseEntry.DateOfBirth" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.Disability" class="form-label"></label>
                                        <input asp-for="BaseEntry.Disability" class="form-control">
                                        <span asp-validation-for="BaseEntry.Disability" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="BaseEntry.TimeZoneOffsetEST" class="form-label"></label>
                                        <select asp-for="BaseEntry.TimeZoneOffsetEST" asp-items="AppHelpers.TimeZones" class="form-select">
                                        </select>
                                        <span asp-validation-for="BaseEntry.TimeZoneOffsetEST" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
