@page
@model Stx.Web.JP.Pages.Candidate.ResumePreferenceModel
@{
}

<section class="min-sec">
    <div class="container">
        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="resumeModify" method="post"></form>
        <div class="row">
            <partial name="_LeftMenuResume" for="PageKey" />

            @if (Model.PageStatus.IsDisplyErrorBanner)
            {
                <div class="col-md-9">
                    <partial name="_StatusBanner" for="PageStatus" />
                </div>
            }
            else
            {
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex bd-highlight ">
                                <h4 class="card-title flex-grow-1" id="repeat-form">Resume Preferences</h4>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">

                                @{
                                    string col1Style = "col-sm-3";
                                    string col2Style = "col-sm-9";
                                    <form class="resume-edit-panel" method="post" asp-page-handler="SubmitEntry">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <input type="hidden" asp-for="Input.CandidateID" value="@Model.CandidateID" />

                                        <div class="row mb-3">
                                            <label asp-for="Input.Privacy" class="@col1Style col-form-label">Profile Visibility</label>
                                            <div class="@col2Style">
                                                <select asp-for="Input.Privacy" class="form-select">
                                                    <option value="0">Public (Searchable)</option>
                                                    <option value="2">Private</option>
                                                </select>
                                                <span asp-validation-for="Input.Privacy" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="@col1Style col-form-label"></div>
                                            <div class="@col2Style">
                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </div>
                                        </div>

                                    </form>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

